---
---
{
    "posts": [
        {% for post in site.posts %}
        {
          "title"    : "{{ post.title }}",
          "url"     : "{{ site.url }}{{ post.url }}",
          "content": {{ post.content | strip_html | jsonify | remove: "\n" | remove: "\t" | remove: "\r"}},
          "date": "{{ post.date | date: "%Y-%m-%d" }}"
        }
        {% unless forloop.last %},{% endunless %}
        {% endfor %}
    ]
}
